<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doit">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoIt">
        <activity
            android:name=".view.activities.update.UpdateTaskActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.home.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.signup.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>